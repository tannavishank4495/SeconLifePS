<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pro_image"
            android:layout_width="150dp"
            android:layout_height="172dp"
            android:layout_margin="65dp"
            android:layout_weight="0"
            android:paddingTop="0sp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/profile" />

        <EditText
            android:id="@+id/pro_edtFname"
            style="@style/editTextregister_style"
            android:hint="First Name"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pro_edtLname"
            style="@style/editTextregister_style"
            android:hint="Last Name"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pro_edtPhone"
            style="@style/editTextregister_style"
            android:hint="Phone Nummber"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pro_edtDOB"
            style="@style/editTextregister_style"
            android:hint="Date of Birth"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pro_edtMail"
            style="@style/editTextregister_style"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pro_edtPassword"
            style="@style/editTextregister_style"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/pro_edtConfirmPassword"
            style="@style/editTextregister_style"
            android:hint="Confirm Password"
            android:inputType="textEmailAddress|textPersonName|textPassword" />


        <Button
            android:id="@+id/pro_btnUpdate"
            style="@style/buttonregister_style"
            android:text="Update" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>